{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node",
            "config": {
                "build": {
                    "commands": [
                        "npm install",
                        "npm run install-chrome"
                    ]
                }
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.js"
        }
    ],
    "crons": [
        {
            "path": "/scrape",
            "schedule": "0 11 * * *"
        }
    ]
}